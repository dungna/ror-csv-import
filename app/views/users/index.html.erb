<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Userid</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Smoker</th>
      <th>Transport</th>
      <th>Marital status</th>
      <th>Birth year</th>
      <th>Color</th>
      <th>Weight</th>
      <th>Budget</th>
      <th>Height</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.userID, user %></td>
        <td><%= user.latitude %></td>
        <td><%= user.longitude %></td>
        <td><%= user.smoker %></td>
        <td><%= user.transport %></td>
        <td><%= user.marital_status %></td>
        <td><%= user.birth_year %></td>
        <td><%= user.color %></td>
        <td><%= user.weight %></td>
        <td><%= user.budget %></td>
        <td><%= user.height %></td>
        <td><%= link_to 'Show', user, :class => 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), :class => 'btn btn-warning btn-xs' %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h3>Import users</h3>
<%= form_tag import_users_path, :class => 'form-inline', multipart: true do %>
  <%= file_field_tag :file, :class => 'form-control' %>
  <%= submit_tag "Upload user", :class => "btn btn-default" %>
  <%= link_to 'New User', new_user_path, :class => 'btn btn-default' %>
<% end %>
